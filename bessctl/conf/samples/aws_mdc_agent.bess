mdc_pkt_gen::AwsMdcPktGen(template=ping_pkt_bytes, pps=1e2)
mdc_rec::AwsMdcReceiver(agent_id=AGENT_ID,
                        switch_mac=SWITCH_MAC,
                        agent_mac=AGENT_MAC,
                        switch_ip=SWITCH_IP,
                        agent_ip=AGENT_IP)

# Adds (session address, label) tuples to the MdcReceiver module
